category:            Text

build-type:          Simple

-- Extra files to be distributed with the package, such as examples or a
-- README.
extra-source-files:  README.md

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10


library
  -- Modules exported by the library.
   exposed-modules: Text.ANTLR.Allstar
                  , Text.ANTLR.Allstar.Grammar
                  , Text.ANTLR.Allstar.GSS
                  , Text.ANTLR.Allstar.Stacks
                  , Text.ANTLR.Allstar.ATN
                  , Text.ANTLR.Allstar.Lex
                  , Text.ANTLR.LL1
                  , Text.ANTLR.LR1

                  , Language.ANTLR4
                  , Language.ANTLR4.Parser
                  , Language.ANTLR4.Quote

  -- Modules included in this library but not exported.
  -- other-modules:

  -- LANGUAGE extensions used by modules in this package.
  other-extensions:    QuasiQuotes
                     , TemplateHaskell
                     , ScopedTypeVariables

  -- Other library packages from which modules are imported.
  build-depends:       base >=4.8 && <4.9, containers, mtl, parsec
                     , parsec, template-haskell, haskell-src-meta >= 0.4

  -- Directories containing source files.
  hs-source-dirs:      src

  -- Base language which the package is written in.
  default-language:    Haskell2010

